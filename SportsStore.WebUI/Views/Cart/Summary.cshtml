@model SportsStore.Domain.Entitiess.Cart

<div class="navbar-right hidden-xs">
    @Html.ActionLink("Checkout", "Index", "Cart",new
{
    returnUrl = Request.Url.PathAndQuery
},new
{
    @class = "btn btn-default navbar-btn"
}
)
</div>

<div class="navbar-right visible-xs">
    <a href=@Url.Action("Index", "Cart" , new { returnUrl = Request.Url.PathAndQuery}) class="btn bt-default navbar-btn">
        <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-shopping-cart"></span>
        </button>
    </a>
</div>
<div class="navbar-text navbar-right">
    <b class="hidden-xs " >Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s),
    @Model.ComputeTotalValue().ToString("c")

</div>
